<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/places">&larr; back to the places</a></p>
				<hr>
				<header>
					<h1>{{data.place.title}}</h1>
					<h5>
						{{{categoryList data.place.categories prefix="Posted in "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
				</header>
				<div class="post">
					{{#if data.place.image}}<img src="{{{cloudinaryUrl data.place.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
                    
					{{{ data.place.content }}}
                    
                    <h3>Services</h3>
                    
					{{# each data.place.services }}
                        <span><img src="{{ serviceType.icon.url }}"></span>
                    {{/each}}
                    
                    <br><br>
                    
				</div>
                
    <div id="map" style="width: 800px; height: 400px;"></div>
    <script>
        var place = {{{ json data.place }}};

        function initMap() {
            // Create a map object and specify the DOM element for display.
            var map = new google.maps.Map(document.getElementById('map'), {
                center: {
                    lat: place.location.geo[1],
                    lng: place.location.geo[0]
                },
                scrollwheel: true,
                zoom: 17
            });


            var myLatLng = {
                lat: place.location.geo[1],
                lng: place.location.geo[0]
            };

            var infowindow = new google.maps.InfoWindow({
                content: place.content
            });

            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: place.title
            });

            marker.addListener('click', function () {
                infowindow.open(map, marker);
            });

        }
    </script>                
                
			</article>
		</div>
	</div>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key={{data.GOOGLE_BROWSER_KEY}}&callback=initMap" async defer></script>
